---
import type { z } from "zod";
import type { MoneyV2Result } from "../utils/schemas";
import Money from "./Money.svelte";

export interface Props {
  price?: z.infer<typeof MoneyV2Result>;
  title: string;
  description: string;
}
const { price, title, description } = Astro.props as Props;
---

<span class="text-2xl font-bold text-dark font-mono">
  {title}
</span>

<div class="text-xl font-bold font-mono text-dark">
  <Money price={price} />
</div>

<div class="mt-4 text-base font-mono text-dark mb-4">
  {description}
</div>
