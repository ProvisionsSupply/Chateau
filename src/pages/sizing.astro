---
import BaseLayout from "../layouts/BaseLayout.astro";
const title = "Sizing";
---

<BaseLayout title={title} description="Provisions garment sizing">
  <section class="container text-dark py-32 flex flex-col gap-24">
    <div class="items flex flex-col">
      <h1>Sizing</h1>
      <p>Please use this as reference for sizing our garments before placing an order. If you are unsure what size you might be please feel free to reach out to us at <a href="mailto:info@provisions.supply">info@provisions.supply</a>.</p>
    </div>
    <div class="items flex flex-col">
      <h1>Garment - 01</h1>
      <ul>
        <li>Small: Collar(19.42") Chest(49.5") Length(23.45")</li>
        <li>Medium: Collar(20.1") Chest(51.9") Length(23.95")</li>
        <li>Large: Collar(20.8") Chest(53.4") Length(24.45")</li>
        <li>Extra Large: Collar(21.5") Chest(54.9") Length(24.95")</li>
      </ul>
    </div>
    <div class="items flex flex-col">
      <h1>Garment - 02</h1>
      <ul>
        <li>Small: Collar(19.42") Chest(49.5") Length(23.45") Sleeve Length("26.25)</li>
        <li>Medium: Collar(20.1") Chest(51.9") Length(23.95") Sleeve Length(26.5")</li>
        <li>Large: Collar(20.8") Chest(53.4") Length(24.45") Sleeve Length(26.75")</li>
        <li>Extra Large: Collar(21.5") Chest(54.9") Length(24.95") Sleeve Length(27")</li>
      </ul>
    </div>
    <div class="items flex flex-col">
      <h1>Garment - 03</h1>
      <ul>
        <li>Small: Collar(19.42") Chest(49.5") Length(23.45") Sleeve Length("26.25)</li>
        <li>Medium: Collar(20.1") Chest(51.9") Length(23.95") Sleeve Length(26.5")</li>
        <li>Large: Collar(20.8") Chest(53.4") Length(24.45") Sleeve Length(26.75")</li>
        <li>Extra Large: Collar(21.5") Chest(54.9") Length(24.95") Sleeve Length(27")</li>
      </ul>
    </div>
    <div class="items flex flex-col">
      <h1>Garment - 04</h1>
      <ul>
        <li>Small: Collar(19.42") Chest(49.5") Length(23.45")</li>
        <li>Medium: Collar(20.1") Chest(51.9") Length(23.95")</li>
        <li>Large: Collar(20.8") Chest(53.4") Length(24.45")</li>
        <li>Extra Large: Collar(21.5") Chest(54.9") Length(24.95")</li>
      </ul>
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    @apply italic font-sans font-bold text-dark text-4xl;
  }

  .items p {
    @apply text-dark font-sans mb-2 last:mb-0;
  }

  a {
    @apply font-bold underline hover:opacity-75;
  }

  ul {
    @apply font-bold list-inside ml-4;
  }
</style>
